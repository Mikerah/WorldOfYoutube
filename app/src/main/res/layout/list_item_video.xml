<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_video_thumbnail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_title"/>
        <TextView
            android:id="@+id/list_video_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_name"/>
        <TextView
            android:id="@+id/list_duration_of_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_of_video"/>
        <TextView
            android:id="@+id/list_video_upload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_date"/>

    </LinearLayout>

</RelativeLayout>